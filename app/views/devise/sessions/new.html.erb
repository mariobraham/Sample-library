<div class="log-form login">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-det">
<h2>Log in</h2>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , placeholder:"Email Address", class:"input-field form-control"%>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password",class:"input-field form-control" %>
  </div>
<br><br>
  <div class="actions">
    <%= f.submit "Log in",class:"form-btn" %>
  </div>
  <%= render "devise/shared/links" %>
</div>
<% end %>
</div>

