
<div class="log-form login">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="form-det">
<h2>Sign up</h2>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email Address",class:"input-field form-control" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"Password", class:"input-field form-control" %>
    <% if @minimum_password_length %>
  (<%= @minimum_password_length %> characters minimum)
    <% end %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",  placeholder:"Confirm Password",class:"input-field form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up",class:"form-btn" %>
  </div>
  </div>
<% end %>

</div>